@model List<PIZZERIA_DA_GIGI.Controllers.ArticoloCarrello>
@{
    ViewBag.Title = "VisualizzaCarrello";
}

<h2>VisualizzaCarrello</h2>
<!-- Modale del carrello -->
<div class="modal fade" id="carrelloModal" tabindex="-1" role="dialog" aria-labelledby="carrelloModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="carrelloModalLabel">Il tuo carrello</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Chiudi">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nome Pizza</th>
                            <th>Prezzo</th>
                            <th>Quantità</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var articolo in Model)
                        {
                            <tr>
                                <td>@articolo.NomePizza</td>
                                <td>@articolo.PrezzoPizza</td>
                                <td>@articolo.Quantita</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
            </div>
        </div>
    </div>
</div>

<!-- Bottone per aprire il modale del carrello -->
<button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#carrelloModal">
    Visualizza Carrello
</button>
